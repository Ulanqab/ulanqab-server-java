<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ulanqab.daily.api.feed.FeedMapper">

    <select id="findByPage" resultType="Feed">
        SELECT * FROM feed
        <where>
            <if test="category != 1">
                category = #{category}
            </if>
            <if test="cursor > 0">
                id &lt; #{cursor}
            </if>
        </where>
        ORDER BY id DESC
        LIMIT
        <if test="cursor &lt; 0">
            #{offset},
        </if>
        #{count}
    </select>
</mapper>